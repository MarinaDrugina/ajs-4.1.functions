{
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "browser": true,
        "jest": true
    },
    "rules": {
        "no-restricted-syntax": [
            "error",
            "LabeledStatement",
            "WithStatement"
        ],
        "linebreak-style": [
            "error", 
            "windows"
        ],
        "import/extensions": [ 
            "error", 
            "ignorePackages", 
            { "": "never" } 
        ]
   },
   "parserOptions": {
    "ecmaversion": 2018,
    "sourceType": "module"
   }
}